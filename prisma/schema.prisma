// This tells Prisma to use the code generator
generator client {
  provider = "prisma-client-js"
}

// This connects to Neon
datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}


model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  snippets      Snippet[] // Our custom relation
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  isPro         Boolean   @default(false) // <-- The Golden Ticket
}

// NextAuth Requirement: Stores "Link between User and Google/GitHub"
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NextAuth Requirement: Stores active login sessions
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Our Custom Model 
model Snippet {
  id        String   @id @default(cuid())
  title     String
  code      String
  language  String
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}